# Seaborn common parameters
# .15 = dark_gray
# .8 = light_gray

figure.facecolor: white
figure.edgecolor: black
figure.dpi: 300

# Set fonts
font.serif: Times New Roman
font.family: serif
#font.sans-serif: Arial, Helvetica
#font.family: sans-serif
font.size: 8

text.color: 0
text.usetex: True
text.latex.preamble: \usepackage{amsmath, gensymb}

mathtext.fontset: dejavuserif
#mathtext.bf:  sans:bold
#mathtext.cal: cursive
#mathtext.it:  sans:italic
#mathtext.rm:  sans
#mathtext.sf:  sans 

# Set x axis
xtick.direction: in
xtick.color: 0
xtick.major.size: 3
xtick.major.width: 0.5
xtick.minor.size: 1.5
xtick.minor.width: 0.5
xtick.minor.visible: False
xtick.top: True

# Set y axis
ytick.direction: in
ytick.color: 0
ytick.major.size: 3
ytick.major.width: 0.5
ytick.minor.size: 1.5
ytick.minor.width: 0.5
ytick.minor.visible: False
ytick.right: True

# Set axis appearance
axes.linewidth: 0.5
axes.axisbelow: True
axes.grid: True
axes.facecolor: white
axes.edgecolor: 0
axes.labelcolor: 0

grid.linestyle: :
grid.linewidth: 0.5
grid.color: 0.8
lines.solid_capstyle: round

# Set legend
legend.frameon: False
legend.shadow: False
legend.numpoints: 1
legend.scatterpoints: 1
legend.fontsize: 8